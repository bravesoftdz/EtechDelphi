unit AnaliseDinamica;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.OleCtrls, SHDocVw, View.WebCharts,
  Data.DB, Datasnap.DBClient;

type
  TFrmAnaliseDinamica = class(TForm)
    WebBrowser1: TWebBrowser;
    WebCharts1: TWebCharts;
    ClientDataSet1: TClientDataSet;
    ClientDataSet1Label: TStringField;
    ClientDataSet1Value: TStringField;
    ClientDataSet1RGB: TStringField;
    procedure FormShow(Sender: TObject);
    procedure FormCreate(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  FrmAnaliseDinamica: TFrmAnaliseDinamica;

implementation

{$R *.dfm}

procedure TFrmAnaliseDinamica.FormCreate(Sender: TObject);
begin
  ClientDataSet1.EmptyDataSet();
  ClientDataSet1.Append();
  ClientDataSet1.FieldByName('Label').AsString := 'Bebidas';
  ClientDataSet1.FieldByName('Value').AsString := '540';
  ClientDataSet1.FieldByName('RGB').AsString := '227, 233, 235';
  ClientDataSet1.Post();
    ClientDataSet1.Append();
  ClientDataSet1.FieldByName('Label').AsString := 'Bebidas';
  ClientDataSet1.FieldByName('Value').AsString := '540';
  ClientDataSet1.FieldByName('RGB').AsString := '227, 233, 235';
  ClientDataSet1.Post();
    ClientDataSet1.Append();
  ClientDataSet1.FieldByName('Label').AsString := 'Bebidas';
  ClientDataSet1.FieldByName('Value').AsString := '540';
  ClientDataSet1.FieldByName('RGB').AsString := '227, 233, 235';
  ClientDataSet1.Post();
    ClientDataSet1.Append();
  ClientDataSet1.FieldByName('Label').AsString := 'Bebidas';
  ClientDataSet1.FieldByName('Value').AsString := '540';
  ClientDataSet1.FieldByName('RGB').AsString := '30, 182, 203';
  ClientDataSet1.Post();
    ClientDataSet1.Append();
  ClientDataSet1.FieldByName('Label').AsString := 'Bebidas';
  ClientDataSet1.FieldByName('Value').AsString := '540';
  ClientDataSet1.FieldByName('RGB').AsString := '227, 233, 235';
  ClientDataSet1.Post();
  ClientDataSet1.CreateDataSet();
end;

procedure TFrmAnaliseDinamica.FormShow(Sender: TObject);
begin
  WebCharts1
    .NewProject
      .Charts
        .Bar
          .Attributes
            .Name('b1')
            .Title('Meu gráfico')
            .DataSet
              .DataSet(ClientDataSet1)
            .&End
          .&End
        .&End
      .&End
      .WebBrowser(WebBrowser1)
      .Generated;
end;

end.
